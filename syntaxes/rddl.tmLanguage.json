{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RDDL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#components"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#fluenttypes"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#builtinfunctions"
		},
		{
			"include": "#aggregations"
		},
		{
			"include": "#distributions"
		},
		{
			"include": "#parameters"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "(//[^\n]*)"
				}
			]
		},
		"components": {
			"patterns": [
				{
					"name": "support.type.property-name",
					"match": "\b(domain|requirements|types|objects|pvariables|cpfs|reward|action-preconditions|state-invariants|termination|instance|init-state|non-fluents|max-nondef-actions|horizon|discount)\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\b(if|then|else|switch|case|default)\b"
				}
			]
		},
		"fluenttypes": {
			"patterns": [
				{
					"name": "support.constant",
					"match": "\b(state-fluent|action-fluent|observ-fluent|interm-fluent|derived-fluent|non-fluent)\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type",
					"match": "\b(bool|int|real|object)\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b[-+]?([0-9]*\\.[0-9]+|[0-9]+)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "\b(true|false|pos-inf)\b"
				}
			]
		},
		"builtinfunctions": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "([^.'\"\\#]\b|^)(exp|log|sin|cos|tan|min|max|pow)\b"
				}
			]
		},
		"aggregations": {
			"patterns": [
				{
					"name": "support.other",
					"match": "\b(sum|prod|minimum|maximum|exists|forall|argmax|argmin)"
				}
			]
		},
		"distributions": {
			"patterns": [
				{
					"name": "support.function",
					"match": "\b(KronDelta|DiracDelta|Bernoulli|Normal)"
				}
			]
		},
		"parameters": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "\\?\\w+\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.other.numeric",
					"match": "(>|<|>=|<=|=|/|\\*|\\+)"
				}
			]
		}
	},
	"scopeName": "domain.rddl"
}
