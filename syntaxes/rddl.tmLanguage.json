{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RDDL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#components"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#fluenttypes"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#builtinfunctions"
		},
		{
			"include": "#aggregations"
		},
		{
			"include": "#distributions"
		},
		{
			"include": "#parameters"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "(?P<COMMENT>//[^\n]*)"
				}
			]
		},
		"components": {
			"patterns": [
				{
					"name": "keyword.rddl.component",
					"match": "\b(?P<COMPONENT>domain|requirements|types|objects|pvariables|cpfs|reward|action-preconditions|state-invariants|termination|instance|init-state|non-fluents|max-nondef-actions|horizon|discount)\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.rddl.conditional",
					"match": "\b(?P<KEYWORD>if|then|else|switch|case|default)\b"
				}
			]
		},
		"fluenttypes": {
			"patterns": [
				{
					"name": "keyword.rddl.fluenttype",
					"match": "\b(?P<FTYPES>state-fluent|action-fluent|observ-fluent|interm-fluent|derived-fluent|non-fluent)\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "keyword.rddl.type",
					"match": "\b(?P<TYPES>bool|int|real|object)\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\b(?P<NUMBER>((0x|0b|0o|#)[\da-fA-F]+)|((\d*\.)?\d+))\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "keyword.rddl.literal",
					"match": "\b(?P<LITERAL>true|false|pos-inf)\b"
				}
			]
		},
		"builtinfunctions": {
			"patterns": [
				{
					"name": "keyword.rddl.builtinfunction",
					"match": "([^.'\"\\#]\b|^)(?P<BUILTIN>exp|log|sin|cos|tan|min|max|pow)\b"
				}
			]
		},
		"aggregations": {
			"patterns": [
				{
					"name": "keyword.rddl.aggregation",
					"match": "\b(?P<AGGREGATION>sum|prod|minimum|maximum|exists|forall|argmax|argmin)"
				}
			]
		},
		"distributions": {
			"patterns": [
				{
					"name": "keyword.rddl.distribution",
					"match": "\b(?P<RANDOM>KronDelta|DiracDelta|Bernoulli|Normal)"
				}
			]
		},
		"parameters":{
			"patterns": [{
				"name": "variable.parameter",
				"match": "\\?\\w+\\b"
			}]
		}
	},
	"scopeName": "domain.rddl"
}
